
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{.SessionData.Title}}</title>
    <link rel="stylesheet" href="/static/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/fontawesome/css/all.css">
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">  
    <link rel="stylesheet" href="/static/custom-css/custom.css">
    
</head>
<body>

<!-- Modal Cart -->
<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header border-bottom-0">
          <h5 class="modal-title" id="exampleModalLabel">
            Keranjang kamu
          </h5>
          <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <table class="table table-image" id="table-cart" width="100%">
           <!--  -->
            <thead>
                <th>Id Cart</th>
                <th>Cover Buku</th>
                <th>Judul Buku</th>
                <th>TotalPerItem</th>
                <th>Harga</th>
                <th>Aksi</th>
            </thead>
          </table> 
          <div class="d-flex justify-content-end">
            <h5>Total: <span class="price text-success">Rp.80000</span></h5>
          </div>
        </div>
        <div class="modal-footer modal-footer-cart border-top-0 d-flex justify-content-between">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success">Checkout</button>
        </div>
      </div>
    </div>
  </div>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Go-Perpus</a>
        <button class="navbar-toggler"  type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Katalog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Programming</a></li>
                        <li><a class="dropdown-item" href="#">Novel</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Lainnya</a></li>
                    </ul>
                </li>

                {{if (eq .SessionData.Role "admin")}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/admin/data_user">[+] Data User</a></li>
                        <li><a class="dropdown-item" href="/admin/data_buku">[+] Data Buku</a></li>
                    </ul>
                </li>
                {{end}}
            </ul>
            
                {{if .SessionData.Auth }}
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <button type="button" class="btn btn-success position-relative"  id="btnCartModal" onclick="cartModalShow();">
                            <i class="fa-solid fa-cart-shopping"></i>
                         
                            
                        </button>  
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userIdAndName" role="button" data-bs-toggle="dropdown" aria-expanded="false" data-user-id="{{.SessionData.ID}}">
                            {{.SessionData.Name}} 
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" href="#">Profil Saya</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" >Pembelian Saya</a>
                            </li>
                            <li>
                                <form action="/logout" method="post">
                                    <button class="btn btn-danger m-2" type="Submit"  > Logout </button>
                                </form> 
                            </li>
                        </ul>
                    </li>
                </ul>
                {{else}}
                <button class="btn btn-success m-2" type="button" data-bs-toggle="modal" data-bs-target="#login">Login</button>
                <button class="btn btn-primary m-2" type="button" data-bs-toggle="modal" data-bs-target="#daftar">Daftar</button>
                {{end}}

        </div>
    </div>
</nav>

<!-- <div id="liveAlertPlaceholder" class="error-container"></div> -->
<div id="liveAlertPlaceholder" class="error-container">
    
</div>


{{if .SessionData.Message}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{.SessionData.Message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{end}}

{{/*Modal Login*/}}
<!-- Modal -->
<div class="modal fade" id="login" tabindex="-1" aria-labelledby="login" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginLabel">Login</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/login">
                    <div class="mb-3">
                        <label for="email_login" class="form-label">Email address</label>
                        <input type="email" class="form-control"  aria-describedby="emailHelp" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Remember me</label>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="Submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/*End Modal Login*/}}
{{/*Modal Daftar*/}}
<div class="modal fade" id="daftar" tabindex="-1" aria-labelledby="login" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Daftar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/signup">
                    <div class="mb-3">
                        <label for="name_signup">Name</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="email_signup" class="form-label">Email address</label>
                        <input type="email" class="form-control"  aria-describedby="emailHelp" name="email">
                    </div>
                    <div class="mb-3">
                        <label for="password_signup" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="gender_signup" class="form-label">Gender</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="radioButton1" value="L">
                            <label class="form-check-label" for="radioButton1">
                                Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="radioButton2" value="P">
                            <label class="form-check-label" for="radioButton2">
                                Female
                            </label>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">+62</span>
                        <input type="text" class="form-control" name="no_telp">
                     </div>
                    <div class="mb-3">
                        <label for="address_signup" class="form-label">Address</label>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Address" id="address" style="height: 100px" name="address"></textarea>
                            <label for="floatingTextarea2">Address</label>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="Submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/*End Modal Daftar*/}}


    <div class="container-fluid">
        {{template "content" .}}
    </div>
</body>
<script src="/static/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<script src="/static/fontawesome/js/all.js"></script>
<script src="/static/custom-js/custom.js" defer></script>
</html>

